<% layout('/layouts/boilerplate') -%>

<style>
    /* Animation Styles */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .scroll-animate {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }
    .animate-visible {
        opacity: 1;
        transform: translateY(0);
    }
    
    /* Gradient Background */
    .auth-bg {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
    }
    
    /* Form Card */
    .auth-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    /* Input Styles */
    .auth-input {
        background: rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
    }
    .auth-input:focus {
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.3);
    }
    
    /* Button Styles */
    .auth-btn {
        background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
        transition: all 0.3s ease;
    }
    .auth-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px -5px rgba(37, 99, 235, 0.4);
    }
    
    /* Abstract Design Elements */
    .auth-decoration {
        position: relative;
    }
    .auth-decoration::before {
        content: '';
        position: absolute;
        top: -50px;
        left: -50px;
        width: 200px;
        height: 200px;
        background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);
        z-index: -1;
    }
    .auth-decoration::after {
        content: '';
        position: absolute;
        bottom: -100px;
        right: -50px;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(245, 158, 11, 0.1) 0%, transparent 70%);
        z-index: -1;
    }
</style>

<div class="min-h-screen auth-bg flex items-center justify-center p-6">
    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-16 items-center">
        <!-- Left Side - Abstract Design -->
        <div class="auth-decoration scroll-animate hidden md:block">
            <div class="relative">
                <!-- Signup Visualization -->
                <div class="w-full h-64 flex items-center justify-center">
                    <div class="relative w-64 h-64">
                        <!-- Animated Form Elements -->
                        <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-40 h-10 bg-blue-500 bg-opacity-20 rounded-lg animate-pulse"></div>
                        <div class="absolute top-16 left-1/2 transform -translate-x-1/2 w-40 h-10 bg-blue-500 bg-opacity-20 rounded-lg animate-pulse" style="animation-delay: 0.2s"></div>
                        <div class="absolute top-32 left-1/2 transform -translate-x-1/2 w-40 h-10 bg-blue-500 bg-opacity-20 rounded-lg animate-pulse" style="animation-delay: 0.4s"></div>
                        
                        <!-- Center Icon -->
                        <div class="absolute inset-0 flex items-center justify-center">
                            <div class="w-24 h-24 bg-blue-600 rounded-full flex items-center justify-center shadow-lg">
                                <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Feature Points -->
                <div class="mt-12 space-y-6">
                    <div class="flex items-start scroll-animate" style="transition-delay: 0.2s">
                        <div class="bg-blue-500 bg-opacity-20 p-2 rounded-lg mr-4">
                            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-white">Quick Registration</h3>
                            <p class="text-gray-400 text-sm">Get started in just a few steps</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start scroll-animate" style="transition-delay: 0.4s">
                        <div class="bg-blue-500 bg-opacity-20 p-2 rounded-lg mr-4">
                            <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-semibold text-white">Secure Voting</h3>
                            <p class="text-gray-400 text-sm">Verified authentication system</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Side - Signup Form -->
        <div class="scroll-animate">
            <div class="auth-card p-8 rounded-xl max-w-md mx-auto shadow-xl">
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold text-white mb-2">Create Account</h1>
                    <p class="text-gray-400">Join DigiVote to participate in elections</p>
                </div>
                
                <form action="/auth/signUp" method="post" class="space-y-5">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-300 mb-2">Full Name</label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name"
                            class="w-full px-4 py-3 auth-input text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="John Doe"
                            required
                        >
                    </div>
                    
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-300 mb-2">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email"
                            class="w-full px-4 py-3 auth-input text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="student@college.edu"
                            required
                        >
                    </div>
                    
                    <div>
                        <label for="college" class="block text-sm font-medium text-gray-300 mb-2">College</label>
                        <select 
                            id="college" 
                            name="college"
                            class="w-full px-4 py-3 auth-input text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required
                        >
                            <option value="DYPCOE">DYPCOE</option>
                            <option value="PCCOE">PCCOE</option>
                        </select>
                    </div>
                    
                    <div>
                        <label for="role" class="block text-sm font-medium text-gray-300 mb-2">Register as</label>
                        <select 
                            id="role" 
                            name="role"
                            class="w-full px-4 py-3 auth-input text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            required
                        >
                            <option value="Voter">Voter</option>
                            <option value="Admin">Admin</option>
                        </select>
                        <p class="text-xs text-yellow-400 mt-2">*For admin, a passkey is required after login!</p>
                    </div>
                    
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password"
                            class="w-full px-4 py-3 auth-input text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                            placeholder="••••••••"
                            required
                        >
                    </div>
                    
                    <button type="submit" class="w-full py-3 auth-btn text-white font-bold rounded-lg">
                        Create Account
                    </button>
                    
                    <div class="text-center text-sm text-gray-400 pt-4">
                        <p>Already have an account? 
                            <a href="/auth/login" class="font-semibold text-yellow-400 hover:text-yellow-300 hover:underline">
                                Login here
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Scroll Animation Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const scrollElements = document.querySelectorAll('.scroll-animate');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const delay = entry.target.style.transitionDelay || '0s';
                    setTimeout(() => {
                        entry.target.classList.add('animate-visible');
                    }, parseFloat(delay) * 1000);
                    observer.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.1
        });

        scrollElements.forEach(el => {
            observer.observe(el);
        });
    });
</script>