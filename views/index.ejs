<% layout('/layouts/boilerplate') -%>

 <!-- Navbar -->
 <nav class="flex justify-between items-center p-5 bg-gray-900 shadow-lg">
    <div class="text-xl font-bold text-blue-400">DigiVote</div>
    <ul class="flex space-x-6">
        <li><a href="/index/read-more" class="hover:text-blue-400">About</a></li>
        <li><a href="#contact" class="hover:text-blue-400">Contact</a></li>
    </ul>
    <div class="space-x-3">
        <% if (ifUser) { %>
            <a href="/auth/logout" class="bg-blue-500 px-4 py-2 rounded hover:bg-blue-700">Logout</a>
        <% } else { %>
            <a href="/auth/login" class="bg-blue-500 px-4 py-2 rounded hover:bg-blue-700">Login</a>
            <a href="/auth/signup" class="bg-green-500 px-4 py-2 rounded hover:bg-green-700">Signup</a>
        <% } %>
    </div>
</nav>

<!-- Hero Section -->
<div class="flex flex-col md:flex-row items-center justify-center h-screen px-10">
    <div class="md:w-1/2 text-center md:text-left">
        <h1 class="text-5xl font-bold">Be a Part of Decision</h1>
        <h2 class="text-3xl text-blue-400 mt-2">Vote Today</h2>
        <div class="mt-6 space-x-4">
            <% if (ifUser) { %>
                <% if (ifUser.info) { %>
                    <a href="/login/<%= ifUser._id %>/home" class="bg-blue-500 px-6 py-3 rounded-lg hover:bg-blue-700">Get Started</a>
                <% } else { %>
                    <a href="/login/<%= ifUser._id %>/profile" class="bg-blue-500 px-6 py-3 rounded-lg hover:bg-blue-700">Get Started</a>
                <% } %>
            <% } else { %>
                <a href="/auth/login" class="bg-blue-500 px-6 py-3 rounded-lg hover:bg-blue-700">Get Started</a>
            <% } %>
            <a href="/index/read-more" class="bg-gray-700 px-6 py-3 rounded-lg hover:bg-gray-600">Read More</a>
        </div>
    </div>
    <div class="md:w-1/2 flex justify-center mt-10 md:mt-0">
        <img src="/images/lets_vote.png" alt="Vote" class="w-80">
    </div>
</div>