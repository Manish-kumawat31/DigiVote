<% layout('/layouts/boilerplate') -%>

<style>
    /* Custom animations */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade {
        opacity: 0;
        animation: fadeIn 0.8s ease-out forwards;
    }
    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-scale:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    }
    .gradient-text {
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
        background-image: linear-gradient(90deg, #3b82f6, #8b5cf6);
    }
    .gradient-bg {
        background: linear-gradient(135deg, #1e3a8a 0%, #2563eb 100%);
    }
    .floating {
        animation: floating 6s ease-in-out infinite;
    }
    @keyframes floating {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
        100% { transform: translateY(0px); }
    }
</style>

<!-- Modern Hero Section with Abstract Design -->
<div class="min-h-screen flex flex-col md:flex-row items-center justify-center px-6 md:px-16 py-20 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 relative overflow-hidden">
    <!-- Abstract background elements -->
    <div class="absolute top-20 left-10 w-64 h-64 bg-blue-600 rounded-full filter blur-3xl opacity-10"></div>
    <div class="absolute bottom-20 right-10 w-64 h-64 bg-purple-600 rounded-full filter blur-3xl opacity-10"></div>
    
    <div class="md:w-1/2 text-center md:text-left space-y-6 animate-fade z-10">
        <h1 class="text-5xl md:text-6xl font-bold text-white leading-tight">
            Be a Part of <span class="gradient-text">Decision</span>
        </h1>
        <h2 class="text-3xl md:text-4xl text-blue-400 font-semibold">Vote Today</h2>
        <p class="text-gray-300 text-lg max-w-lg">
            Secure, transparent and accessible digital voting platform for modern democracy.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 mt-8 animate-fade" style="animation-delay: 0.3s">
            <% if (ifUser) { %>
                <% if (ifUser.info) { %>
                    <a href="/login/<%= ifUser._id %>/home" class="bg-blue-600 hover:bg-blue-700 px-8 py-3.5 rounded-lg font-medium text-lg transition-all hover-scale shadow-lg text-center">
                        Get Started
                    </a>
