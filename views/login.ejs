<% layout('/layouts/boilerplate') -%>
<div class="flex justify-center items-center h-screen bg-black px-6">
    <div class="flex w-1/2 justify-center items-center">
        <img src="/images/svg/login.svg" alt="loginLogo" class="w-80">
    </div>
    <div class="w-1/3 bg-white/10 p-8 rounded-lg shadow-lg flex flex-col items-center">
        <form action="/auth/Login" method="post" class="w-full space-y-4">
            <div>
                <label for="email" class="block text-white font-semibold">Email</label>
                <input type="email" id="email" name="email"
                    class="w-full p-2 mt-1 border border-blue-500 bg-transparent text-white rounded focus:outline-none focus:ring-2 focus:ring-yellow-400"
                    required>
            </div>
            <div>
                <label for="password" class="block text-white font-semibold">Password</label>
                <input type="password" id="password" name="password"
                    class="w-full p-2 mt-1 border border-blue-500 bg-transparent text-white rounded focus:outline-none focus:ring-2 focus:ring-yellow-400"
                    required>
            </div>
            <div>
                <button type="submit"
                    class="w-full py-2 bg-blue-600 text-white font-bold rounded hover:bg-yellow-400 hover:text-black transition">
                    Login
                </button>
            </div>
            <div class="text-white text-sm text-center">
                <span>Not a user? <a href="/auth/signup" class="text-yellow-400 font-bold hover:underline">Sign
                        up</a></span>
            </div>
        </form>
    </div>
</div>
